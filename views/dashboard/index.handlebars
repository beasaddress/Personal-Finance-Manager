<main>
  {{#if loggedIn}}

    <div class='flex flex-col items-center justify-center'>
      <h1 class='text-3xl font-bold text-gray-900'>Welcome to the Dashboard</h1>
      <p class='mt-4 text-base leading-7 text-gray-600'>You are logged in as
        {{user.email}}</p>
      <a
        href='/logout'
        class='mt-4 text-sm font-semibold text-gray-900'
      >Logout</a>
    </div>

  {{else}}

    <div class='flex flex-col items-center justify-center'>
      <h1 class='text-3xl font-bold text-gray-900'>Welcome to the Dashboard</h1>
      <p class='mt-4 text-base leading-7 text-gray-600'>You are not logged in</p>
      <a
        href='/login'
        class='mt-4 text-sm font-semibold text-gray-900'
      >Login</a>
    </div>

  {{/if}}
</main>